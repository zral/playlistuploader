# Spotify API Credentials
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Spotify Redirect URI
# For local development: http://127.0.0.1:3000/auth/callback
# For production: https://yourdomain.com/auth/callback
SPOTIFY_REDIRECT_URI=http://127.0.0.1:3000/auth/callback

# Session Secret
# Generate a random string for production (e.g., openssl rand -base64 32)
SESSION_SECRET=change-this-to-a-random-secret-in-production

# Frontend URL
# Used for CORS and OAuth redirects
# For local development: http://127.0.0.1 (production mode) or http://127.0.0.1:5173 (dev mode)
# For production: https://yourdomain.com
FRONTEND_URL=http://127.0.0.1
CORS_ORIGIN=http://127.0.0.1

# Port (for production deployment)
# Default: 80
PORT=80

# Node Environment
# development | production
NODE_ENV=production

# Database Backup Configuration
# Number of days to retain automated backups (default: 7)
# Older backups are automatically deleted
BACKUP_RETENTION_DAYS=7

# Logging Configuration
# Log level: error, warn, info, http, debug (default: info)
# production: info | development: debug
LOG_LEVEL=info

# Redis Cache Configuration
# Redis connection URL (default: redis://localhost:6379)
# For Docker: redis://redis:6379
# For local development: redis://localhost:6379
REDIS_URL=redis://redis:6379

# Enable/disable caching (default: true)
# Set to false to disable all caching (useful for debugging)
CACHE_ENABLED=true

# Batch Search Configuration
# Maximum number of concurrent Spotify API search requests (default: 50)
# Prevents rate limiting and server overload when searching many songs at once
# Lower values = more stable but slower; Higher values = faster but more aggressive
BATCH_SEARCH_CONCURRENT_LIMIT=50

# AI Playlist Generator Configuration
# Primary AI provider: openrouter | groq | openai (default: openrouter)
AI_PROVIDER=openrouter

# Optional fallback provider if primary fails
# AI_FALLBACK_PROVIDER=groq

# OpenRouter API Configuration
# Get API key from https://openrouter.ai/keys
# Free tier available with generous limits
OPENROUTER_API_KEY=your_openrouter_api_key_here # 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
OPENROUTER_MODEL=openai/gpt-3.5-turbo

# Groq API Configuration (Optional - for fallback)
# Get API key from https://console.groq.com/keys
# GROQ_API_KEY=your_groq_api_key_here
# GROQ_MODEL=llama3-70b-8192

# OpenAI API Configuration (Optional - for direct OpenAI access)
# Get API key from https://platform.openai.com/api-keys
# OPENAI_API_KEY=your_openai_api_key_here

# AI Rate Limiting
# Maximum playlist generations per user per day (default: 5)
AI_RATE_LIMIT_PER_USER_DAILY=5

# Maximum playlist generations per IP per hour (default: 10)
AI_RATE_LIMIT_PER_IP_HOURLY=10

# Maximum songs per playlist generation request (default: 50)
AI_MAX_SONGS_PER_REQUEST=50

# Maximum playlist duration in minutes (default: 180 = 3 hours)
AI_MAX_DURATION_MINUTES=180
